# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Shell scripts (bash)
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 4
end_of_line = crlf

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 4
end_of_line = crlf

# JSON, YAML
[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab
