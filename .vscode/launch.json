{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dashboard",
            "type": "python",
            "request": "launch",
            "module": "dashboard.app",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Dashboard (Debug)",
            "type": "python",
            "request": "launch",
            "module": "dashboard.app",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_ENV": "development"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
