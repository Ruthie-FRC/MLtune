# Automatically activate virtual environment when entering this directory
# Requires direnv: https://direnv.net/
#
# Installation:
#   Mac: brew install direnv
#   Ubuntu/Debian: sudo apt install direnv
#   
# After installing direnv, add this to your shell config:
#   eval "$(direnv hook bash)"  # for bash
#   eval "$(direnv hook zsh)"   # for zsh
#
# Then run: direnv allow

# Check if Python 3.8+ is available
if ! command -v python3 &> /dev/null; then
    echo "WARNING: Python 3 is not installed or not in PATH"
    return
fi

# Create virtual environment if it doesn't exist
if [ ! -d ".venv" ]; then
    echo "Creating virtual environment..."
    python3 -m venv .venv

    # Install dependencies after creating venv
    source .venv/bin/activate
    echo "Installing dependencies..."
    pip install --quiet --upgrade pip
    pip install --quiet -r src/mltune/tuner/requirements.txt
    pip install --quiet -r src/dashboard/requirements.txt
    echo "✓ Virtual environment created and dependencies installed"
fi

# Activate the virtual environment
source .venv/bin/activate
echo "✓ Virtual environment activated (.venv)"
